<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="markmoussa.me.saverssurprise">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-permission android:name="android.permission.INTERNET" />

        <activity
            android:name=".AddSavingsActivity"
            android:label="@string/title_activity_add_savings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HistoryGraphActivity"
            android:label="@string/title_activity_thank_you"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ThankYouActivity"
            android:label="@string/title_activity_thank_you"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
